%body
  %h1 Movie Details
  #movie
    %header
      %h2= @movie.title
      %h3
        Cateory: #{@movie.category.name}
        %ul.actions
          %li= link_to "Edit Movie", edit_movie_path(@movie),
              class: "edit" if policy(@movie).edit?
          %li= link_to "Delete Movie", movie_path(@movie),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this movie?"},
              class: "delete" if policy(@movie).destroy?
    %p
      Content: #{@movie.text}
